<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/very_small_margin"
    android:paddingBottom="@dimen/small_margin"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    todo align the content vertically-->
    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_user_avatar"
        android:layout_width="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/small_margin"
        android:src="@drawable/no_image" />

    <TextView
        android:ellipsize="end"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_user_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_user_avatar"
        android:id="@+id/tv_user_name_and_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="@string/sample_comment" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/tv_user_name_and_comment"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name_and_comment"
        tools:text="12 days ago"
        android:id="@+id/tv_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>